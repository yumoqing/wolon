.basebox{
	width:100%;
	height:100%;
}
.rc_tl .rc_tr {
	position: relative;
	box-sizing: border-box;
	display:block;
	float: left;
	overflow:auto;
  	width:{{float(request.args.get('w')[0])*0.3 - 1}}px;
	height:{{float(request.args.get('h')[0])*0.6 - 1}}px;
	border:1px solid #ccc;
	overflow:auto;
}

.rc_tc {
	position: relative;
	box-sizing: border-box;
	display:block;
	float: left;
	overflow:auto;
  	width:{{float(request.args.get('w')[0])*0.3 - 1}}px;
	height:{{float(request.args.get('h')[0])*0.4 - 1}}px;
	border:1px solid #ccc;
	overflow:auto;
}
